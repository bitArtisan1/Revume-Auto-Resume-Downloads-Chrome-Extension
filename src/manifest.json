{
  "name": "Revume",
  "description": "A Chrome Extension For Auto-Resuming Downloads",

  "version": "2.0.0",
  "default_locale": "en",

  "icons": {
    "16": "icons/16x16.png",
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  },

  "action": {
    "default_popup": "html/popup.html"
  },

  "permissions": [
    "storage",
    "downloads"
  ],

  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },

  "manifest_version": 3
}